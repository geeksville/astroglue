{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: starbash app",
            "type": "debugpy",
            "request": "launch",
            "module": "starbash.main",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.vscode/get_poetry_python.sh",
            "justMyCode": false,
            "args": [
                "user",
                "analytics",
                "on"
            ]
        },
        {
            "name": "Python Debugger: processing script",
            "type": "debugpy",
            "request": "launch",
            "program": "poc/process.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.vscode/get_poetry_python.sh"
        },
        {
            "name": "Python Debugger: PyTest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.vscode/get_poetry_python.sh"
        }
    ]
}